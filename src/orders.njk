    <section>
        <div class="container">
            <div class="hero-section-wrapper orders-page-section section-wrapper">
                <div class="hero-section">
                    <p class="hero-text">
                        I’m doing things a bit different, I will hand deliver your order, and you can pay when it arrives (with card or cash.)
                    </p>
                    <p class="hero-text">
                        For now we’re Auckland based, so can only deliver in the Auckland central area.
                    </p>
                    <p class="hero-text">
                        Put down your name, addy and number and I’ll deliver with in 2 working days. 
                    </p>
                    <p class="hero-text">
                        I want to hear from you about these products, what you love and what you want!
                    </p>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="container">
            <div class="orders-section-wrapper section-wrapper">
                <div class="orders-section">
                    <div class="order-form">
                        <form name="Orders" method="post" id="submit-order" data-netlify="true">
                            <div class="form-group">
                                <input type="hidden" id="product_name" value="" name="product_name">
                                <input type="text" name="full_name" id="full_name" placeholder="NAME">
                            </div>
                            <div class="form-group">
                                <textarea name="address" id="address" placeholder="ADDRESS" rows="3"></textarea>
                            </div>
                            <div class="form-group">
                                <input type="number" name="ph_number" id="ph_number" placeholder="NUMBER">
                            </div>
                            <div class="form-group">
                                <button class="outlined-text" type="submit" name="submit" id="submit"><p class="outlined-text">SEND</p></button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
  
  <script>
    document.addEventListener("DOMContentLoaded", () => {
        if (product_name == null) {
            if (confirm("In order to proceed with the order please go to Products page and click on Order button on any of the product in order to proceed with the order. would you like to visit products page?")) {
                window.location.assign("/products");
            }
        } else {
            document.getElementById("product_name").value = product_name;
        }
    })
    const handleSubmit = event => {
    event.preventDefault();

    const myForm = event.target;
    const formData = new FormData(myForm);

    fetch("/", {
        method: "POST",
        headers: { "Content-Type": "application/x-www-form-urlencoded" },
        body: new URLSearchParams(formData).toString()
    })
        .then(() => formSuccessful())
        .catch(error => formError(error));
    };

    document.querySelector("form").addEventListener("submit", handleSubmit);
    function formSuccessful() {
        const paragraph = document.createElement('p');
        paragraph.classList.add("successfull");
        paragraph.textContent = "Form has been submitted successfully";
        const formContainer = document.querySelector("#submit-order");
        formContainer.appendChild(paragraph);
    } 
    function formError(err) {
        const paragraph = document.createElement('p');
        paragraph.classList.add("error");
        paragraph.textContent = "There was an error submitting the form.";
        const formContainer = document.querySelector("#submit-order");
        formContainer.appendChild(paragraph);
        console.error(err);
    }
  </script>
